{
  "name": "Flutter Dev Container",
  "features": {
    "ghcr.io/devcontainers-contrib/features/flutter:latest": {}
  },
  "postCreateCommand": "flutter pub get",
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter"
      ]
    }
  },
  "mounts": [
    "source=${containerEnv:HOME}/.pub-cache,target=/home/vscode/.pub-cache,type=bind"
  ]
}
