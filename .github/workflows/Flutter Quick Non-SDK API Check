name: Flutter Quick Non-SDK API Check

on:
  push:
    branches: ['**']
  pull_request:
    branches: ['**']

jobs:
  quick-sdk-check:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: subosito/flutter-action@v2
        with:
          channel: stable
      - run: flutter pub get
      - run: flutter build apk --debug
      - name: Start emulator and install APK
        uses: ReactiveCircus/android-emulator-runner@v2
        with:
          api-level: 29
          arch: x86_64
          script: |
            adb install build/app/outputs/apk/debug/app-debug.apk
            adb shell am start -n com.devocional_nuevo/.MainActivity
            sleep 10
            adb logcat -d | grep 'Accessing hidden API' > sdk_warnings.txt || true
            if [ "$(wc -c < sdk_warnings.txt)" -gt 0 ]; then
              echo "❌ Non-SDK API warnings found!"
              cat sdk_warnings.txt
              exit 1
            else
              echo "✅ No Non-SDK API warnings detected."
            fi
